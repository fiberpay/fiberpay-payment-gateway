{
    "name": "fiberpay/fiberpay-payment-gateway",
    "description": "Fiberpay payment gateway",
    "version": "0.1.9",
    "require": {
        "fiberpay/fiberpay-php": "^0.1.5",
        "firebase/php-jwt": "^7.0.0"
    },
    "require-dev": {
        "wp-coding-standards/wpcs": "^3.1.0",
        "phpstan/phpstan": "^2.0.0",
        "squizlabs/php_codesniffer": "^3.11.0"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "scripts": {
        "lint": "phpcs --standard=phpcs.xml . --runtime-set ignore_warnings_on_exit 1",
        "lint-fix": "phpcbf --standard=phpcs.xml .",
        "analyze": "phpstan analyse --configuration=phpstan.neon",
        "test": "phpunit",
        "quality": ["@lint", "@analyze"]
    }
}
